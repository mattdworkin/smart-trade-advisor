# Core app settings
APP_NAME=Smart Trade Advisor Agent
ENVIRONMENT=development
DEBUG=true
ENABLE_BACKGROUND_REFRESH=true
REFRESH_INTERVAL_SECONDS=900

# Market universe can be comma-separated
MARKET_UNIVERSE=AAPL,MSFT,NVDA,AMZN,GOOGL,META,TSLA,JPM,XOM,LLY,SPY,QQQ

# OpenAI (optional, used for embeddings + synthesis)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Neon Postgres + pgvector (recommended)
NEON_DATABASE_URL=

# Neo4j and Graphiti integration
NEO4J_URI=neo4j+s://<your-instance>.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# News provider: auto | newsapi_ai | nyt
NEWS_PROVIDER=auto

# NewsAPI.ai (Event Registry) - primary in auto mode if key is set
NEWSAPI_AI_KEY=
NEWSAPI_AI_ENDPOINT=https://eventregistry.org/api/v1/article/getArticles

# New York Times fallback
NYT_API_KEY=
NYT_SECTION=business
